#!/bin/bash

EMOJIS=(💩 🐦 🚀 🐞 🎨 🍕 🐭 👽 ☕️ 🔬 💀 🐷 🐼 🐶 🐸 🐧 🐳 🍔 🍣 🍻 🔮 💰 💎 💾 💜 🍪 🌞 🌍 🐌 🐓 🍄 )
EMOJIS_LENGTH=${#EMOJIS[@]}

GREEN="\033[38;5;118m"
BLUE="\033[38;5;75m"
LBLUE="\033[38;5;45m"
RESET="\033[0m"

date_color()
{
  if [[ ! $PWD/ =~ \/fun\/ ]]; then
    echo -e "$BLUE"
  else
    echo -e "\033[38;5;$(shuf -i 16-233 -n 1)m"
  fi
}

time_color()
{
  if [[ ! $PWD/ =~ \/fun\/ ]]; then
    echo -e "$LBLUE"
  else
    echo -e "\033[38;5;$(shuf -i 16-233 -n 1)m"
  fi
}


dir_color()
{
  if [[ ! $PWD/ =~ \/fun\/ ]]; then
    echo -e "$GREEN"
  else
    echo -e "\033[38;5;$(shuf -i 16-233 -n 1)m"
  fi
}

reset()
{
  echo -e "$RESET"
}

prompt()
{
  if [[ $PWD/ =~ \/fun\/ ]]; then
    echo -en "${EMOJIS[$RANDOM % $EMOJIS_LENGTH]} "
  else
    echo -en "➜ "
  fi
}

PS1='\[$(date_color)\]\d\[$(reset)\] \[$(time_color)\]\@\[$(reset)\] \[$(dir_color)\]\w\[$(reset)\] $(prompt)'
PS2="➜ ➜ "
