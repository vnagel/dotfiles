#!/bin/bash

EMOJIS=(ğŸ’© ğŸ¦ ğŸš€ ğŸ ğŸ¨ ğŸ• ğŸ­ ğŸ‘½ â˜•ï¸ ğŸ”¬ ğŸ’€ ğŸ· ğŸ¼ ğŸ¶ ğŸ¸ ğŸ§ ğŸ³ ğŸ” ğŸ£ ğŸ» ğŸ”® ğŸ’° ğŸ’ ğŸ’¾ ğŸ’œ ğŸª ğŸŒ ğŸŒ ğŸŒ ğŸ“ ğŸ„ )
EMOJIS_LENGTH=${#EMOJIS[@]}

GREEN="\033[38;5;118m"
BLUE="\033[38;5;75m"
LBLUE="\033[38;5;45m"
RESET="\033[0m"

date_color()
{
  if [[ $PWD/ =~ \/fun\/ ]]; then 
    echo -e "\033[38;5;$(shuf -i 16-233 -n 1)m"
  else
    echo -e "$BLUE"
  fi
}

time_color()
{
  if [[ $PWD/ =~ \/fun\/ ]]; then 
    echo -e "\033[38;5;$(shuf -i 16-233 -n 1)m"
  else
    echo -e "$LBLUE"
 fi
}

dir_color()
{
  if [[ $PWD/ =~ \/fun\/ ]]; then
    echo -e "\033[38;5;$(shuf -i 16-233 -n 1)m"
  else
    echo -e "$GREEN"
  fi
}

reset()
{
  echo -e "$RESET"
}

prompt()
{
  if [[ $PWD/ =~ \/fun\/ ]]; then
    echo -e "${EMOJIS[$RANDOM % $EMOJIS_LENGTH]} "
  else
    echo -e "âœ "
  fi
}

PS1='\[$(date_color)\]\d \[$(time_color)\]\@ \[$(dir_color)\]\w\[$(reset)\] $(prompt)'
PS2="âœ âœ "
